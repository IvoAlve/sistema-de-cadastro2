@model ContatoModel
@{
    ViewData["Title"] = "Editar contato";
}

<div class="text-center">

    <h1 class="display-4">Editar contato</h1>



</div>
<form asp-controller="Contato" asp-action="Alterar" method="post">
    <input type="hidden" asp-for="Id"/>
    <div class="mb-3">
        <label for="nome" >Nome</label>
        <input type="text" asp-for="Nome" class="form-control">
        @Html.ValidationMessageFor(x=> x.Nome)

    </div>
    <div class="mb-3">
        <label for="email">E-mail</label>
        <input type="text" asp-for="Email" class="form-control">
        @Html.ValidationMessageFor(x=> x.Email)

    </div>
    <div class="mb-3">
        <label for="telefone">Telefone</label>
        <input type="text" asp-for="Celular" class="form-control">
         @Html.ValidationMessageFor(x=> x.Celular)

    </div>



    <button type="submit" class="btn btn-primary btn-block">Alterar</button>
    <a class="btn btn-primary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>